{
	"compilerOptions": {
		"module": "ESNext",
		"target": "ESNext",
		"lib": ["dom", "dom.iterable", "esnext"],
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "react-jsx",
		"composite": true,
		"rootDir": "src",
		"declarationDir": "dist",
		"declaration": true
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist"]
}
